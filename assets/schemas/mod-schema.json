{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "./mod-schema.json",
    "title": "Mod Schema",
    "description": "Schema for mods",
    "type": "object",
    "required": ["name", "version"],
    "properties": {
        "name": {
            "type": "string"
        },
        "blocks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "texture", "category"],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "texture": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "components": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object"
                        }
                    },
                    "type": {
                        "type": "string",
                        "enum": ["fg", "bg", "overlay"],
                        "default": "fg"
                    },
                    "isOversize": {
                        "type": "boolean",
                        "default": "false"
                    },
                    "isAnimated": {
                        "type": "boolean",
                        "default": "false"
                    }
                }
            }
        },
        "version": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "maxItems": 3,
            "minItems": 3
        }
    }
}
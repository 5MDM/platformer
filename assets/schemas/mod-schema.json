{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "./mod-schema.json",
    "title": "Mod Schema",
    "description": "Schema for mods",
    "type": "object",
    "required": ["name", "version"],
    "properties": {
        "name": {
            "type": "string"
        },
        "blocks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "texture"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "texture": {
                        "type": "string"
                    },
                    "isPassable": {
                        "type": "boolean"
                    },
                    "bgComponents": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object"
                        }
                    }
                }
            },
            "maxItems": 32766
        },
        "version": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "maxItems": 3,
            "minItems": 3
        }
    }
}